@using RandevuSistemi.Models.Entities;
@model AnaBilimDali

<h2 class="text-center mb-4">Ana Bilim Dalı Düzenle</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AnaBilimDaliDuzenle" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label for="ad" class="form-label">Hayvan Adı</label>
                <input type="text" class="form-control" id="ad" name="Name" value="@Model.Name" required>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-md">Güncelle</button>
            </div>
        </form>
    </div>
</div>
