<h2 class="text-center mb-4">Yeni Ana Bilim Dalı Ekleyin</h2>

@using (Html.BeginForm("AnaBilimDaliEkle", "Admin", FormMethod.Post))
{
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label for="ad" class="form-label">Ana Bilim Dalı Adı</label>
                    <input type="text" class="form-control" id="ad" name="Name" required>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-md">Ekle</button>
                </div>
            </form>
        </div>
    </div>
}